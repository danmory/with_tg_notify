{
  "compilerOptions": {
    "target": "esnext",                      
    "experimentalDecorators": true,          
    "module": "commonjs",                    
    "rootDir": "./src",                         
    "moduleResolution": "node",              
    "allowJs": false,                        
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          
    "noImplicitAny": true,                   
    "strictNullChecks": true,                
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": []
}
